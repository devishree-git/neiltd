<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_custom" model="report.paperformat">
        <field name="name">custom paperformate</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">217</field>
        <field name="page_width">260</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">80</field>
    </record>

    <template id="custom_external_layout">
       <t t-name="nei_accounts.custom_external_layout">
       <t t-if="not o" t-set="o" t-value="doc"/>
            <table name="main" width="100%" height="226.7717px">
                <table name="T1" width="50%">
                    <table name="t1" width="50%" border="0" height="75.59px" style="font-size:28px">
                        <tr><td><b>INVOICE</b></td></tr>
                    </table>
                    <table name="t2" height="15px" width="50%" style="font-size:12px">
                        <tr>
                            <td width="10%"/>
                            <td width="10%"/>
                            <td width="10%"/>
                            <td width="10%" class="text-right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%y')"/>
                            </td>
                        </tr>
                    </table>
                    <table name="t3" height="113.39px" width="40%" border="0" style="font-size:10px">
                        <tr>
                            <td>
                                <b>
                                    <t t-esc="o.partner_id.name"/><br/>
                                    <t t-esc="o.partner_id.street"/><br/>
                                    <t t-esc="o.partner_id.city"/><br/>
                                    <t t-esc="o.partner_id.zip"/>
                                </b>
                            </td>
                        </tr>
                    </table>
                </table>
            </table>
            <br/><br/>
            
            
            
            <table width="100%" height="15px" border="0" style="font-size:10px">
            <tr height="8px">
                <td width="40px" align="center"><t t-esc="o.name"/></td>
                <td width="40px" align="center"><t t-esc="o.date_invoice"/></td>
                <td width="40px" align="center"><t t-esc="o.name"/></td>
                <td width="40px" align="center"><t t-esc="o.date_due"/></td>
                <td width="40px" align="center">End of List</td>
                <td width="40px" align="center"/>
                <td width="40px" align="center"/>
                <td width="70px" align="center"/>
            </tr>
        </table>
        <table width="100%" height="450px" border="0" style="font-size:12px">
          <tbody>
            <t t-foreach="o.invoice_line_ids" t-as="line">
                <tr>
                    <t name="account_invoice_line_accountable">
                        <td name="code" width="113px" class="text-left">
                            <span t-field="line.product_id.default_code"/>
                        </td>
                        <td width="249.45px" align="left" name="description" class="text-left"><span t-field="line.product_id.name"/></td>
                        <td width="52.91px" align="right" name="unit" class="text-right"><span t-field="line.uom_id.name"/></td>
                        <td width="64.25px" align="right" name="qty" class="text-right"><span t-field="line.quantity"/></td>
                        <td width="98.27px" align="right" name="price" class="text-right"><span t-field="line.price_unit"/></td>
                        <td width="68.03px" align="right" name="disc" class="text-right"><span t-field="line.discount"/></td>
                        <td width="102.05px" align="right" name="net amount" class="text-right"><span t-field="line.price_subtotal"/></td>
                        <td width="22.68px"  align="right" name="vat" class="text-right"><span t-field="line.id"/></td>
                    </t>
                 </tr>
                 </t>
            </tbody>
        </table>
        
        <table name="sub-t2-1" width="100%" border="0" style="font-size:12px" >
            <tr>
                <td width="566.92px"/>
                <td width="193.04px" align="right">
                    <t><span t-field="o.amount_total"/></t><br/>
                    <t><span t-field="o.amount_tax"/></t><br/>
                    <t><span t-field="o.residual"/></t><br/>
                </td>
            </tr>
        </table>
        
            
            
            
            

        <br/><br/>
    </t>
    </template>

</odoo>
