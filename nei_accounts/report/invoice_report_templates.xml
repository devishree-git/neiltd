<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document1">
            <t t-call="nei_accounts.custom_external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                
                    <table name="sub-t1" width="100%" height="15px" border="1" style="font-size:10px">
                        <tr height="8px">
                            <td width="40px" class="text-center"><t t-esc="o.name"/></td>
                            <td width="40px" class="text-center"><t t-esc="o.date_invoice"/></td>
                            <td width="40px" class="text-center"><t t-esc="o.name"/></td>
                            <td width="40px" class="text-center"><t t-esc="o.date_due"/></td>
                            <td width="40px" class="text-center">End of List</td>
                            <td width="40px" class="text-center"></td>
                            <td width="40px" class="text-center"></td>
                            <td width="70px" class="text-center"></td>
                        </tr>
                    </table>
                    <br/><br/>
                    
                    <table name="sub-t1" width="100%" height="450px" border="1" style="font-size:12px">
                        <tbody class="invoice_tbody">
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <tr>
                                <t name="account_invoice_line_accountable">
                                    <td name="code" width="113px" class="text-left" style="border-left: 1px solid #D3D3D3;">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td width="249.45px" name="description" class="text-left"><span t-field="line.product_id.name"/></td>
                                    <td width="52.91px" name="unit" class="text-right"><span t-field="line.uom_id.name"/></td>
                                    <td width="64.25px" name="qty" class="text-right"><span t-field="line.quantity"/></td>
                                    <td width="98.27px" name="price" class="text-right"><span t-field="line.price_unit"/></td>
                                    <td width="68.03px" name="disc" class="text-right"><span t-field="line.discount"/></td>
                                    <td width="102.05px" name="net amount" class="text-right"><span t-field="line.price_subtotal"/></td>
                                    <td width="22.68px" name="vat" class="text-right"><span t-field="line.id"/></td>
                                </t>
                             </tr>
                             </t>
                        </tbody>
                    </table>
                    
                    <table name="sub-t2-1" border="1" style="font-size:15px">
                        <tr class="is-subtotal text-right">
                            <td width="566.92px"></td>
                            <td width="193.04px">
                                <t><span t-field="o.amount_total"/></t><br/>
                                <t><span t-field="o.amount_tax"/></t><br/>
                                <t><span t-field="o.residual"/></t><br/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </template>

        

        <template id="report_invoice1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.user_id.lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="nei_accounts.report_invoice_document1" t-lang="lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
